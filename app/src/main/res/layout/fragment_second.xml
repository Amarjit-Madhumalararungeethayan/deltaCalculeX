<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">

    <Button
        android:id="@+id/b1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="2"
        android:id="@+id/b2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b1"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="3"
        android:id="@+id/b3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b2"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="C"
        android:background="#ffaf7a"
        android:id="@+id/clear"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b3"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="+"
        android:background="#ffaf7a"
        android:id="@+id/add"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b3"
        app:layout_constraintTop_toBottomOf="@id/clear"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="-"
        android:background="#ffaf7a"
        android:id="@+id/sub"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b3"
        app:layout_constraintTop_toBottomOf="@id/add"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="%"
        android:background="#ffaf7a"
        android:id="@+id/div"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b8"
        app:layout_constraintTop_toBottomOf="@id/sub"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="x"
        android:background="#ffaf7a"
        android:id="@+id/mul"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b7"
        app:layout_constraintTop_toBottomOf="@id/sub"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="="
        android:background="#ff8b3d"
        android:id="@+id/eq"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b3"
        app:layout_constraintTop_toBottomOf="@id/sub"
        />



    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="4"
        android:id="@+id/b4"
        app:layout_constraintTop_toBottomOf="@id/b1"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="5"
        android:id="@+id/b5"
        app:layout_constraintTop_toBottomOf="@id/b1"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b4"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="6"
        android:id="@+id/b6"
        app:layout_constraintTop_toBottomOf="@id/b1"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b5"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="7"
        android:id="@+id/b7"
        app:layout_constraintTop_toBottomOf="@id/b4"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="8"
        android:id="@+id/b8"
        app:layout_constraintTop_toBottomOf="@id/b4"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b7"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="9"
        android:id="@+id/b9"
        app:layout_constraintTop_toBottomOf="@id/b4"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/b8"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="0"
        android:id="@+id/b0"
        app:layout_constraintTop_toBottomOf="@id/b8"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>